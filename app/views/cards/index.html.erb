<h1>Все карточки</h1>
 
<table align="center">
  <tr>
    <th>Слово</th>
    <th>Перевод</th>
    <th>Дата пересмотра</th>
    <th></th>
  </tr>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.try(:strftime, "%d/%m/%Y") %></td>
      <td>
        <%= link_to "Показать", card_path(card) %><br><%= link_to "Редактировать", edit_card_path(card) %> / 
        <%= link_to "Удалить", card_path(card), method: :delete, data: { confirm: 'Вы уверены, что хотите удалить безвозвратно эту флэш-карточку?' }  %>
      </td>
    </tr>
  <% end %>
</table>
