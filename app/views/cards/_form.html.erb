<%= simple_form_for @card do |f| %>
  <%= f.input  :original_text,   label: "Слово:" %>
  <%= f.input  :translated_text, label: "Перевод:" %>
  <%= f.input  :review_date,     label: "Время пересмотра:", as: :string %>
  <%= f.button :submit, "OK",    class: "btn btn-large btn-primary" %>
<% end %>

